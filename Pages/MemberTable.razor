@page "/memberList"
@inject NavigationManager navManager

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="text-primary">Member List</h3>
                <button type="submit" class="btn btn-primary" @onclick="NavigateToAddMemberForm">+ Add New Member</button>
            </div>
            <p>These are the members of Bislerium.</p>

            @if (members == null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered text-center">
                        <thead>
                            <tr>
                                <th>Phone Number</th>
                                <th>Membership Start Date</th>
                                <th>Membership End Date</th>
                                <th>Subscription Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in members)
                            {
                                <tr>
                                    <td>@member.PhoneNumber</td>
                                    <td>@member.MembershipStartDate.ToString("D")</td>
                                    <td>@member.MembershipEndDate.ToString("D")</td>
                                    <td>
                                        @if (member.MembershipEndDate >= DateTime.Now)
                                        {
                                            <span class="text-success font-weight-bold"><strong>@MemberSubscriptionStatus.Active.ToString()</strong></span>
                                        }
                                        else
                                        {
                                            <span class="text-danger font-weight-bold"><strong>@MemberSubscriptionStatus.Expired.ToString()</strong></span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    List<Member> members = new List<Member>();

    protected override void OnInitialized()
    {
        // Retrieve the list of available hobbies
        members = MemberService.RetrieveMemberData();
        base.OnInitialized();
    }
    public void NavigateToAddMemberForm()
    {
        navManager.NavigateTo("/addMember");
    }
}
